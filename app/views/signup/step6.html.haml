= form_for @user, url: "/signup" do |f|
  .payment-top
    .payment-top__header
      = link_to "/" do
        .payment-top__header__icon
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308", size: "185x49", alt: "mercari"
      .progress
        %ol.word-wrapper
          %li.word5-1
            会員情報
          %li.word5-2
            電話番号認証
          %li.word5-3
            お届け先住所入力
          %li.word5-4
            支払い方法
          %li.word5-5
            完了
        %ol.line-wrapper
          %li.circle5-1
          %li.bar5-1
          %li.circle5-2
          %li.bar5-2
          %li.circle5-3
          %li.bar5-3
          %li.circle5-4
          %li.bar5-4
          %li.circle5-5

    .payment-top__main
      .payment-top__main__new
        %h2 支払い方法
      .payment-top__main__content
        .form-list
          = f.label :カード番号
          %span.form-must 必須
          = f.text_field :card_number ,class: "payment-input-data", placeholder: "半角数字のみ"
          = render partial: 'user_error_messages', locals: {user: @user, column: "card_number"}
          = image_tag "credit-cards.png"
        .form-list
          = f.label :有効期限
          %span.form-must 必須
        .exparation-select-wrap
          .select-wrap
            %i.icon-arrow-bottom
            = f.select :card_limit_year, [options_for_select(2019..2030)], {include_blank: "--", selected: "--"}, class: "select-default"
            = render partial: 'user_error_messages', locals: {user: @user, column: "card_limit_year"}
          %span.date 年
          .exparation-wrap.select-wrap__month
            %i.icon-arrow-bottom
            = f.select :card_limit_month, [options_for_select(1..12)], {include_blank: "--", selected: "--"}, class: "select-default"
            = render partial: 'user_error_messages', locals: {user: @user, column: "card_limit_month"}
          %span.date 月
          
        .form-list
          = f.label :セキュリティコード
          %span.form-must 必須
          = f.text_field :security_code ,class: "payment-input-data", placeholder: "カード背面4行もしくは3行の番号"
          = render partial: 'user_error_messages', locals: {user: @user, column: "security_code"}
          %p.card-back
            .yourselfs
              カード裏面の番号とは？
        = f.submit "次へ進む",class: "btn-red-payment"

= render 'registration_footer'
