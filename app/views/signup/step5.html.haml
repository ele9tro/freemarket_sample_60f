= form_for @user, url: "/signup/step6", method: "get" do |f|
  .address-top
    .address-top__header
      = link_to "/" do
        .address-top__header__icon
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308", size: "185x49", alt: "mercari"
      .progress
        = image_tag "address.png"
    .address-top__main
      .address-top__main__new
        %h2 発送元・お届け先住所入力
      .address-top__main__content

        .form-list
          = f.label :お名前
          %span.form-must 必須
          = f.text_field :last_name, class: "input-data", placeholder: "例) 山田"
          = render partial: 'user_error_messages', locals: {user: @user, column: "last_name"}
          = f.text_field :first_name, class: "input-data", placeholder: "例) 彩"
          = render partial: 'user_error_messages', locals: {user: @user, column: "first_name"}

        .form-list
          = f.label :お名前カナ
          %span.form-must 必須
          = f.text_field :last_name_kana, class: "input-data", placeholder: "例) ヤマダ"
          = render partial: 'user_error_messages', locals: {user: @user, column: "last_name_kana"}
          = f.text_field :first_name_kana, class: "input-data", placeholder: "例) アヤ"
          = render partial: 'user_error_messages', locals: {user: @user, column: "last_name_kana"}

        = f.fields_for :address do |i|
          .form-list
            = i.label :郵便番号
            %span.form-must 必須
            = i.text_field :post_code, class: "input-data", placeholder: "例) 123-4567"
            = render partial: 'address_error_messages', locals: {address: @user.address, column: "post_code"}

          .form-list
            = i.label :都道府県
            %span.form-must 必須
            = i.text_field :prefecture, class: "input-data", placeholder: "例) 北海道"
            = render partial: 'address_error_messages', locals: {address: @user.address, column: "prefecture"}

          .form-list
            = i.label :市区町村
            %span.form-must 必須
            = i.text_field :town, class: "input-data", placeholder: "例) 横浜市緑区"
            = render partial: 'address_error_messages', locals: {address: @user.address, column: "town"}

          .form-list
            = i.label :番地
            %span.form-must 必須
            = i.text_field :street, class: "input-data", placeholder: "例) 青山1-1-1"
            = render partial: 'address_error_messages', locals: {address: @user.address, column: "street"}

          .form-list
            = i.label :建物名
            %span.form-may 任意
            = i.text_field :building_name, class: "input-data", placeholder: "例) TECHビル103"

        .form-list
          = f.label :電話
          %span.form-may 任意
          = f.text_field :phone_number, class: "input-data", placeholder: "例) 09012345678"

      .next-content
        = f.submit "次へ進む", class: "phone-btn-red"

= render 'registration_footer'
