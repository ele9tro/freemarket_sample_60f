<div class="address-top">

  <div class="address-header">
    <div class="register-top-icon">
            <a href="https://www.mercari.com/jp/">
              <img src="//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308" alt="mercari">
      </a>
    </div>
    <div class="progress">
      <%= image_tag "address.png" %>
    </div>
  </div>

  <div class="address-main">

    <div class=registration-main-main>
        <div class=new-address>
          <h2>発送元・お届け先住所入力</h2>
        </div>

      <div class="address-content">
        
                <div class="form-list">
          <label for="nickname">お名前</label>
          <span class="form-must">必須</span>
          <input type="text" value="" name="nickname" placeholder="例) 山田" class="input-data">
          <input type="text" value="" name="nickname" placeholder="例) 彩" class="input-data">
                  </div>

                <div class="form-list">
          <label for="nickname">お名前カナ</label>
          <span class="form-must">必須</span>
          <input type="text" value="" name="nickname" placeholder="例) ヤマダ" class="input-data">
          <input type="text" value="" name="nickname" placeholder="例) アヤ" class="input-data">
                  </div>

                <div class="form-list">
          <label for="nickname">郵便番号</label>
          <span class="form-must">必須</span>
          <input type="text" value="" name="nickname" placeholder="例) 123-4567" class="input-data">
                  </div>

                <div class="form-list">
          <label for="nickname">都道府県</label>
          <span class="form-must">必須</span>
          <input type="text" value="" name="nickname" placeholder="北海道" class="input-data">
                </div>

                <div class="form-list">
          <label for="nickname">市区町村</label>
          <span class="form-must">必須</span>
          <input type="text" value="" name="nickname" placeholder="例) 横浜市緑区" class="input-data">
                </div>

                <div class="form-list">
          <label for="nickname">番地</label>
          <span class="form-must">必須</span>
          <input type="text" value="" name="nickname" placeholder="例) 青山1-1-1" class="input-data">
                  </div>

                <div class="form-list">
          <label for="nickname">建物名</label>
          <span class="form-may">任意</span>
          <input type="text" value="" name="nickname" placeholder="例) TECHビル103" class="input-data">
                  </div>

                <div class="form-list">
          <label for="nickname">電話</label>
          <span class="form-may">任意</span>
          <input type="text" value="" name="nickname" placeholder="例) 09012345678" class="input-data">
                  </div>

    </div>
        <div class="next-content">
          <button type="submit" class="btn-red-red">次へ進む</button>
        </div>
    </div>

  </div>

<%= render 'registration_footer'%>

</div>


